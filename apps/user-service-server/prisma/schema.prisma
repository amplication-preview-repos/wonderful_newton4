datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  lat       Float?
  long      Float?
  name      String?
  phone     String?
  photo     Json?
  updatedAt DateTime @updatedAt
  username  String?
}

model Location {
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  lat       Float?
  long      Float?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  lastName  String?
  locations Location[]
  otp       Int?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
